<%- include("partials/header"); -%>
<h1>Compose</h1>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input name="postTitle" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">

  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Post</label>
    <textarea name="postBody" cols="40" rows="5" class="form-control" id="exampleInputPassword1"></textarea>

    <!-- <input type="textarea" class="form-control" id="exampleInputPassword1" placeholder="Password"> -->
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer"); -%>
